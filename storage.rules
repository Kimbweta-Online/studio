
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the 'avatars' folder
    match /avatars/{userId}/{allPaths=**} {
      // Public read access for profile pictures is allowed so anyone can see them.
      allow read: if true;
      
      // Allow write (upload, update, delete) only if the user is authenticated
      // and the {userId} in the path matches their own UID.
      // This ensures users can only manage their own profile pictures.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
