
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /avatars/{userId}/{allPaths=**} {
      // Allow public read access to anyone for profile pictures.
      allow read;
      
      // Allow write (create, update, delete) only if the user is authenticated 
      // and the userId in the path matches their own uid.
      // This ensures users can only manage their own profile pictures.
      // We also limit the file size to 2MB.
      allow write: if request.auth != null && request.auth.uid == userId && request.resource.size < 2 * 1024 * 1024;
    }
  }
}
