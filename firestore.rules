
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Allow any authenticated user to read therapist profiles
    match /users/{therapistId} {
      allow get: if request.auth != null && resource.data.role == 'therapist';
      allow list: if request.auth != null;
    }

    // Allow clients to create bookings
    // Allow clients/therapists to read/update bookings they are part of
    match /bookings/{bookingId} {
      allow create: if request.auth.uid == request.resource.data.clientId;
      allow read, update: if request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.therapistId;
    }
  }
}
