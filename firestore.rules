rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow logged-in users to read public-safe collections
    match /users/{userId} {
      allow read: if request.auth != null;
      allow update: if request.auth.uid == userId;
    }

    match /quotes/{quoteId} {
      allow read, create: if request.auth != null;
    }

    // Bookings can be created by clients, and read by either client or therapist
    match /bookings/{bookingId} {
      allow create: if request.auth.uid == request.resource.data.clientId;
      allow read, update: if request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.therapistId;
    }

    // Chats & messages can be read/written only by participants
    match /chats/{chatId} {
      allow read, update, create: if request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
        allow read, create, update: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
  }
}
