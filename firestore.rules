
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // IMPORTANT: Development-only rule.
    // This allows any authenticated user to read any document.
    // This should be locked down before going to production.
    match /{document=**} {
      allow read: if request.auth != null;
    }

    // Users can update their own user document
    match /users/{userId} {
      allow update: if request.auth.uid == userId;
    }

    // Any authenticated user can create a user document for themselves (on signup)
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
    }

    // Clients can create bookings
    match /bookings/{bookingId} {
      allow create: if request.auth.uid == request.resource.data.clientId;
    }

    // Therapists can update bookings
    match /bookings/{bookingId} {
        allow update: if request.auth.uid == resource.data.therapistId;
    }
    
    // Allow authenticated therapists to create quotes
    match /quotes/{quoteId} {
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'therapist';
    }
  }
}
